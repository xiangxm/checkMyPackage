<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    android:gravity="top|center_vertical"
    android:orientation="vertical"
    android:padding="20dp" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shapelayout_grey_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/aboutlayout_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <TextView
                    android:id="@+id/aboutauthortxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center|center_vertical"
                    android:text="关于作者"
                    android:textColor="#00688B"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="14dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/night_set_unfold"
                    android:gravity="center|center_vertical"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#5B5B5B" />

        <LinearLayout
            android:id="@+id/aboutlayout_2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp" >

            <LinearLayout
                android:id="@+id/companyname_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <TextView
                    android:id="@+id/companynametxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center|center_vertical"
                    android:text="清除查询历史"
                    android:textColor="#00688B"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="14dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/night_set_unfold"
                    android:gravity="center|center_vertical"
                    android:textColor="#262626"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#5B5B5B" />

        <LinearLayout
            android:id="@+id/aboutlayout_3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/companynametxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|center_vertical"
                android:text="评分"
                android:textColor="#00688B"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="14dp"
                android:layout_height="22dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/night_set_unfold"
                android:gravity="center|center_vertical"
                android:textColor="#262626"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>