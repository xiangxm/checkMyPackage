<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="CustomWindowTitleBackground">
        <item name = "android:background">#00000000</item>
    </style>
    <style name = "MY_MEIZU_UI" parent="android:Theme">
        <item name = "android:windowTitleSize">60dp</item>
        <item name= "android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>
    
    
    	<style name="auto_roll_style">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">26dip</item>
	</style>


	<style name="work_apption_field_style">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#919191</item>
		<item name="android:layout_marginLeft">4dip</item>
		<item name="android:layout_marginTop">10dip</item>
	</style>
</resources>